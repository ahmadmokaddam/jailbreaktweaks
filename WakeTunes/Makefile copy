include $(THEOS)/makefiles/common.mk

TARGET = simulator:clang
ARCHS = x86_64 i386
DEBUG = 0;
GO_EASY_ON_ME = 1;

TWEAK_NAME = WakeTunes
WakeTunes_FILES = Tweak.xm
WakeTunes_PRIVATE_FRAMEWORKS = MediaRemote
PACKAGE_VERSION = $(THEOS_PACKAGE_BASE_VERSION)

WakeTunes_CFLAGS = -fobjc-arc

include $(THEOS_MAKE_PATH)/tweak.mk
SUBPROJECTS += prefs
include $(THEOS_MAKE_PATH)/aggregate.mk

after-install::
	install.exec "killall -9 SpringBoard"

	THEOS_PACKAGE_DIR_NAME = debs
	# TARGET = iphone:clang
	# ARCHS = armv7 armv7s arm64
	TARGET = simulator:clang
	ARCHS = x86_64 i386
	# i386 slice is required for 32-bit iOS Simulator (iPhone 5, etc.)
	DEBUG = 0
	GO_EASY_ON_ME = 1
	PACKAGE_VERSION = $(THEOS_PACKAGE_BASE_VERSION)

	include $(THEOS)/makefiles/common.mk

	TWEAK_NAME = WakeTunes
	simjectExampleTweak_FILES = simjectExampleTweak.xm
	simjectExampleTweak_CFLAGS = -fobjc-arc -Wno-deprecated-declarations

	include $(THEOS_MAKE_PATH)/tweak.mk
